@using SaaSCloud.Common;
@{
    //ViewBag.Title = "Edit";
    SessionInfo session = new SessionInfo();
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="x-ua-compatible" content="IE=edge, chrome=1">	
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link href="/Content/SaaSCloud/saas_buy.css" rel="stylesheet" media="screen" />

<title>歡迎來到Saas雲產品異動服務</title>

<style>
	#custom_container{ width:1170px; max-width:100%;min-height: 370px !important;padding-top: 20px; text-align:center;}
	#custom_container>div{ width:800px; max-width:100%; margin:auto;}
	#custom_container .row-fluid{margin-top: 20px;}
	#custom_container a.btn {width: 100%;padding: 15px 0px;display: block;max-width: 260px;margin: auto;font-size: 12pt;color: #333;background: #fff;border-color: #adadad;}
	#custom_container a.btn:hover{background-color: #e6e6e6;border-color: #adadad;}
</style>

</head>
<body>
<div id="custom_container">
    <div>
        <h1>
            歡迎使用Saas雲產品異動服務
        </h1>
        <div style="margin:10px 0;">
        	<strong>XXX</strong>您好！您可以從下方選單選擇欲使用的服務：
        </div>
        <div class="row-fluid">
        	<div class="span6">
                <a class="btn" href="#" onclick="goto('History', 'History');">
                    訂單查詢
                </a>
            </div>
        	<div class="span6">
                @if (session.SaaSCloudInfo.mainProdPurchaseInfo.PurchaseInvoiceP1 || session.SaaSCloudInfo.mainProdPurchaseInfo.PurchaseInvoiceP5) {
            	    <a class="btn" href="#" onclick="goto('Invoice', 'Invoice');">
                	    電子發票產品-加購硬體
                    </a>
                }
            </div>
        </div>
        <div class="row-fluid">
        	<div class="span6">
                @if (session.SaaSCloudInfo.mainProdPurchaseInfo.PurchaseCRMStandard != null) {
            	    <a class="btn" href="#" onclick="goto('Standard', 'CRM');">
                	    CRM行銷高手產品<br>
                        加購帳號/儲存空間
                    </a>
                }
            </div>
        	<div class="span6">
                @if (session.SaaSCloudInfo.mainProdPurchaseInfo.PurchaseCRMAdvance != null) {
            	    <a class="btn" href="#" onclick="goto('Advance', 'CRM');">
                	    CRM豪華版產品<br>
                        加購帳號/儲存空間
                    </a>
                }
            </div>
        </div>
    </div>
</div>
</body>
</html>
